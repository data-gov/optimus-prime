{
  "name": "optimus-prime",
  "version": "0.0.1",
  "engines": {
    "node": "8.9.1",
    "npm": "5.5.1"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint:check": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "prettier": "prettier --write 'src/**/*.js'",
    "test": "jest",
    "test:watch": "jest --watch --lastCommit --onlyChanged"
  },
  "dependencies": {
    "apollo-engine": "0.8.5",
    "compression": "1.7.1",
    "diacritics": "^1.3.0",
    "dotenv": "^5.0.0",
    "graphql-yoga": "1.2.0",
    "helmet": "^3.11.0",
    "mongodb": "^2.2.33",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "prettier": "^1.10.2",
    "jest": "^21.1.0",
    "nodemon": "^1.15.1",
    "eslint": "^4.7.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-graphql": "^1.4.0-1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.5.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "testEnvironment": "node"
  }
}
